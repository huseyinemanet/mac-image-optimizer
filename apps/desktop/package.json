{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "main": "dist-electron/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 dist-electron/main/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "package": "npm run dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "chokidar": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "sharp": "^0.34.3",
    "ssim.js": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "40.4.1",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.8",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.macimageoptimizer.app",
    "productName": "Mac Image Optimizer",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
